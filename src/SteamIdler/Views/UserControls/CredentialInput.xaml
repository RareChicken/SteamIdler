<UserControl x:Class="SteamIdler.Views.UserControls.CredentialInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:SteamIdler.Properties"
             xmlns:localize="http://gu.se/Localization"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="UsernameTextBox"
            ui:ControlHelper.PlaceholderText="{localize:Static properties:Resources.Username}"
            Margin="0,0,8,8"
            Text="{Binding Username, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
        <PasswordBox
            x:Name="PasswordBox"
            Margin="0,8,8,0"
            ui:ControlHelper.PlaceholderText="{localize:Static properties:Resources.Password}"
            Grid.Row="1" />
        <Button
            Grid.Column="1"
            Grid.RowSpan="2"
            x:Name="SignInButton"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsEnabled="{Binding SignInButtonIsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            Content="{localize:Static properties:Resources.SignIn}"
            Command="{Binding SignInCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
    </Grid>
</UserControl>
