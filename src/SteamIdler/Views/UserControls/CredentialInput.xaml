<UserControl x:Class="SteamIdler.Views.UserControls.CredentialInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:SteamIdler.Properties"
             xmlns:localize="http://gu.se/Localization"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:helpers="clr-namespace:SteamIdler.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BindingProxy x:Key="CredentialInputProxy" Data="{Binding RelativeSource={RelativeSource Self}}" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox
            ui:ControlHelper.PlaceholderText="Id"
            Margin="0,0,8,8"
            Text="{Binding Id, Source={StaticResource CredentialInputProxy}}" />
        <PasswordBox
            x:Name="PasswordBox"
            Margin="0,8,8,0"
            ui:ControlHelper.PlaceholderText="Password"
            Grid.Row="1" />
        <Button
            Grid.Column="1"
            Grid.RowSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="{localize:Static properties:Resources.SignIn}" />
    </Grid>
</UserControl>
